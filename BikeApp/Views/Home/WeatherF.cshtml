@model BikeApp.Models.ForecastData.Root
@{ Layout = "_Layout"; ViewBag.Title = "Forecast";}

@try
{
    <h2><center>Weather Info for @Model.city.name</center></h2>
    

    <link rel="stylesheet" href="~/css/custom.css" />

    <table class="table table-sm table-striped table-bordered m-2 custom-table">
        <thead><tr><th>Date</th><th>Temperature</th><th>Humidity</th><th>Wind</th><th>Wind Direction</th><th>Pressure</th><th>Description</th></tr></thead>
        <tbody>
            @foreach (var item in Model.list)
            {
                <tr>

                    <td>@item.dt_txt</td>
                    <td>@item.main.temp °C </td>
                    <td>@item.main.humidity %</td>
                    <td>@item.wind.speed km/h</td>
                    <td>@item.wind.deg °</td>
                    <td>@item.main.pressure hPa</td>
                    @foreach (var item1 in item.weather)
                    {
                        <td>@item1.description</td>

                    }


                </tr>
            }

        </tbody>
    </table>
    <br />
    <center><a asp-action="" class="btn btn-info  ">SEARCH AGAIN</a></center>
    <br />
}
catch
{

    <h1>I am sorry, I can't find your city :(</h1>

    <br />
    <a asp-action="" class="btn btn-sm btn-primary">Search Again!</a>}