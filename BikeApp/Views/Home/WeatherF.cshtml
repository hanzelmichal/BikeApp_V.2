@model BikeApp.Models.ForecastData.Root
@{ Layout = "_Layout"; ViewBag.Title = "Forecast";}
<div style="background-color: white; opacity:0.8; padding:20px; border-radius:10px">
 <h2 class="text-center">Weather Info for @Model.city.name</h2>
 <div class="container" style="height:50rem; overflow-y:scroll">
     <link rel="stylesheet" href="~/css/custom.css" />
     @foreach (var item in Model.list)
     {
    <div class="text-black">
        <table class="text-center border">
            <tr style="width:150px; height:150px;">
                @foreach (var item1 in item.weather)
                {
                    string iconmeteo = " ";
                    switch (item1.description.ToString())
                    {
                        case "clear sky": iconmeteo = "☀️"; break;
                        case "few clouds": iconmeteo = "⛅"; break;
                        case "scattered clouds": iconmeteo = "☁️"; break;
                        case "broken clouds": iconmeteo = "☁️"; break;
                        case "shower rain": iconmeteo = "🌧️"; break;
                        case "rain": iconmeteo = "🌦️"; break;
                        case "thunderstorm": iconmeteo = "🌩️"; break;
                        case "snow": iconmeteo = "❄️"; break;
                        case "fog": iconmeteo = "🌫️"; break;
                        case "overcast clouds":
                            <img src="~/lib/weather-icon/04d.png" />
 break;
                    }
                    <td rowspan="7">@iconmeteo</td>
                }
            </tr>
            <tr>
                <th>@item.dt_txt</th>
            </tr>
            <tr>
                <td><b>Temperature:</b> @item.main.temp °C</td>
            </tr>
            <tr>
                <td><b>Humidity:</b> @item.main.humidity %</td>
            </tr>
            <tr>
                <td><b>Wind Speed:</b> @item.wind.speed km/h</td>
            </tr>
            <tr>
                <td><b>Wind Degree:</b> @item.wind.deg °</td>
            </tr>
            <tr>
                <td><b>Pressure:</b> @item.main.grnd_level hPA</td>
            </tr>



        </table>

         <br />
         <br />


     </div>
             }





 </div>
     <br />
     <center><a asp-action="Weather" class="btn btn-info  ">SEARCH AGAIN</a></center>
     <br />
</div>