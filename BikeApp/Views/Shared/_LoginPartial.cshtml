@using Microsoft.AspNetCore.Identity
@using BikeApp.Areas.Identity.Data

@inject SignInManager<AplicationUser> SignInManager
@inject UserManager<AplicationUser> UserManager

<link rel="stylesheet" href="~/css/custom.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet">
<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

            <ul class="navbar-nav flex-grow-1 ">
                <li class="nav-item">
                    <a class="nav-link text-white fas fa-map-marked-alt" asp-area="" asp-controller="Home" asp-action="Maps"></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white fas fa-umbrella " asp-area="" asp-controller="Home" asp-action="Weather"></a>
                </li>
            </ul>
        </div>
            
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white"><a class="fas fa-sign-out-alt"></a></button>
            </form>
        </li>

    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fas fa-user-plus " id="register" asp-area="Identity" asp-page="/Account/Register"></a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white fas fa-sign-in-alt " id="login" asp-area="Identity" asp-page="/Account/Login"></a>        
        </li>
    }
</ul>
