@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div class="row">
        <div class="col-md-6 offset-md-3 ">
            <div class="card login-logout-tab custom-loginregister">
                <div class="card-header bg-transparent section">
                    <ul class="nav nav-tabs card-header-tabs justify-content-center bg-transparent custom-ul section">
                        <li class="nav-item custom-li">
                            <a class="login-form-link text-white" href='/Identity/Account/Login'>SIGN IN</a>
                        </li>
                        <li class="nav-item custom-li">
                            <a class="register-form-link text-white" href='/Identity/Account/Register'>SIGN UP</a>
                        </li>
                    </ul>
                </div>
                <div class="card-contetnt">
                    <div class="row">
                        <div class="col-md-12">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



@section Scripts
{
    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            }
            })
    </script>
    <script src="~/js/custom.js"></script>
    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.bundle.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
}
